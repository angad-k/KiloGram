{% extends "templates/base.twig" %}

{% block title %}Feed{% endblock %}

{% block body %}

<script src = "/assets/scripts/postActions.js"></script>
{% for post in posts %}

<div class = "post" id = {{post.ID}}>
    <div class = "postUsername">
        <h3>{{post.username}}</h3>
    </div>
    <hr class = "hr1">
    <div class = "postPhoto">
        <img src = {{post.url}} style = "height: 100%; max-height: 500px;">
    </div>
    <hr class = "hr1">
    <div class = "postBottomPanel">
        <span class = "upvote">
            <img src = "/assets/icons/upvote.png" style = "height: 25px;">
        </span>
        <span class = "upvote" onclick=
            "
            console.log(this.parentElement.parentElement.id);
            ">
            <img src = "/assets/icons/comment.png" style = "height: 25px;">
        </span>
        <span class = "postLikes">
            <b>likes</b> : {{post.likes}}
        </span>
        <span class = "postLikes" >
            <b>Read comments</b>
        </span>
    </div>
    <div class = "commentWriter">

    </div>
    <hr class = "hr1">
    <div class = "postCaption">
        <b>{{post.username}} : </b>{{post.caption}}
    </div>
    
</div>


{% endfor %}
<div class = "bottomPlaceholder">
</div>

{% endblock %}